<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <!--Fill main fields in create product form-->
    <actionGroup name="fillMainProductForm">
        <remove keyForRemoval="selectStockStatus" />
        <remove keyForRemoval="fillProductQty" />
        <scrollTo selector="{{AdminProductSourcesSection.sourcesBlock}}" x="0" y="-80" stepKey="scrollToSources" />
        <click selector="{{AdminProductSourcesSection.assignSources}}" stepKey="clickAssignSourcesButton" />
        <waitForPageLoad stepKey="waitForModalAppear" />
        <checkOption selector="{{AdminAssignSourcesSlideOutGridSection.checkboxByCode(product.source)}}" stepKey="checkDefaultSource" />
        <click selector="{{AdminAssignSourcesSlideOutSection.done}}" stepKey="clickDoneButton" />
        <fillField selector="{{AdminProductSourcesGrid.rowQtyByCode(product.source)}}" userInput="{{product.quantity}}" stepKey="fillQuantityDefaultSource" />
    </actionGroup>
</actionGroups>
